# Mongo connection string including database name
MONGODB_URI=mongodb://localhost:27017/threeservice
MONGODB_DB_NAME=threeservice

# Output directory for trained models and feature exports
ML_OUTPUT_DIR=artifacts

# Unsupervised model hyperparameters
ML_KMEANS_CLUSTERS=6
ML_IFOREST_CONTAMINATION=0.05
ML_FEATURE_FREQ=M
ML_RANDOM_STATE=42

# Optional enrichment datasets
# For multi-year training runs, generate expanded CSVs:
#   python scripts/generate_historical_external_features.py
FESTIVAL_FEATURES_CSV=data/festival_features_2022_2026.csv
INCOME_FEATURES_CSV=data/income_features_2023_2026.csv

# Fallback/original single-year/single-point CSVs:
# FESTIVAL_FEATURES_CSV=data/festival_features.csv
# INCOME_FEATURES_CSV=data/income_features.csv

# Node.js inference service
ML_SERVER_PORT=5050
PYTHON_BIN=python

# Optional custom routing service (defaults to OSRM public server)
ROUTE_SERVICE_URL=https://router.project-osrm.org
